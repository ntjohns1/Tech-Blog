{{!-- homepage --}}
{{#each posts as |post|}}
<div class="card">
    <a href="/post/{{post.id}}">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <p>{{post.user.username}}:  {{post.formattedDate}}</p>
        </div>
    </a>
    <div class="card-body">
        <p>
            {{post.body}}
        <p>
    </div>
</div>
{{/each}}